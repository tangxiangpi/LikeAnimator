<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.wangsz.likeanimator.IconAnimatorView
        android:id="@+id/ica_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换"
        android:layout_gravity="center" />

    <com.wangsz.likeanimator.IconAnimatorView
        android:id="@+id/ica_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        app:ia_selected="true"
        app:ia_icon_selected="@mipmap/ic_trends_entrance"
        app:ia_icon_unselected="@mipmap/ic_trends_hot_unselected"
        app:ia_cicle_color="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="切换"
        android:layout_gravity="center" />


</LinearLayout>
